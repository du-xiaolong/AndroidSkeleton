<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnActivityParams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity传递参数"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnActivityParamsWithResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Activity传递参数(带返回)"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnFragmentParams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment传递参数"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnFragmentParamsWithResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Fragment传递参数(带返回)"
                android:textAllCaps="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <Button
            android:id="@+id/btnLauncher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试Launcher"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSwipeRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="侧滑RecyclerView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件相关操作"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDisplayCuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适配刘海屏"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDisplayCuts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="适配刘海屏（封装）"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnParamActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跨activity传参"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:text="A->B->C, B finish，回传参数给A" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>