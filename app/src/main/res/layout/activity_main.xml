<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnActivityParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity传递参数"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnActivityParamsWithResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Activity传递参数(带返回)"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btnActivityParams"
        app:layout_constraintStart_toEndOf="@id/btnActivityParams"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFragmentParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment传递参数"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnActivityParams" />

</androidx.constraintlayout.widget.ConstraintLayout>